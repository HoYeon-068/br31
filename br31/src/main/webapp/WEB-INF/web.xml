<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>br31</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.xhtml</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.xhtml</welcome-file>
  </welcome-file-list>
  
  <resource-ref>
	 <description>Oracle Datasource example</description>
	 <res-ref-name>jdbc/myoracle</res-ref-name>
	 <res-type>javax.sql.DataSource</res-type>
	 <res-auth>Container</res-auth>
  </resource-ref>
  
  <servlet>
    <description>MVC 패턴 컨트롤러</description>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>mvc.controller.DispatcherServlet</servlet-class>
    <init-param>
      <description>요청URL-처리할 CommandHandler 객체 매핑 설정 파일 등록</description>
      <param-name>mappingPath</param-name>
      <param-value>/WEB-INF/commandHandler.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
      <servlet-name>ajaxControllerUsingURI</servlet-name>
      <servlet-class>mvc.controller.AjaxControllerUsingURI</servlet-class>
      <init-param>
         <param-name>configFile</param-name>
         <param-value>
                /WEB-INF/ajaxCommandHandlerURI.properties
            </param-value>
      </init-param>
      <load-on-startup>2</load-on-startup>
   </servlet>

   <servlet-mapping>
      <servlet-name>ajaxControllerUsingURI</servlet-name>
      <url-pattern>*.ajax</url-pattern>
   </servlet-mapping>
  
  
  
<filter>
	<description>인코딩 필터</description>  
	<filter-name>characterEncodingFilter</filter-name>
	<filter-class>com.filter.CharacterEncodingFilter</filter-class>
	<init-param>
		<description>인코딩</description>
		<param-name>encoding</param-name>
		<param-value>UTF-8</param-value>
	</init-param>
</filter>
<filter-mapping>
	<filter-name>characterEncodingFilter</filter-name>
	<url-pattern>/*</url-pattern>
	<dispatcher>REQUEST</dispatcher>
</filter-mapping>
</web-app>